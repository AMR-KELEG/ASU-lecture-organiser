<div class="comment">
  <div>
    <%= link_to comment.user.username, user_url(comment.user) %>
    <%= link_to 'Delete', [@slide, comment], method: :delete%>
  </div>
  <div>
    <%= content_tag :span, "(#{time_ago_in_words comment.created_at} ago)", class: "comment-title"%>
  </div>
  <div><%= simple_format comment.text %></div>
</div>