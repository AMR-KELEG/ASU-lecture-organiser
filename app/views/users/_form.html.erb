<div class="container col-md-2">
</div>

<div class="container col-md-6">
  <%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="col-lg-4 col-lg-offset-4">
      <div id="form" >
                <h1>Editing User</h1>

                  <div class="field">
                    <div class="field"><%= f.text_field :username ,placeholder: "Username", class: "form-style" %></div>
                  </div>

                  <div class="form-group">
                  <div class="field"><%= f.text_field :firstname ,placeholder: "First name", class: "form-style" %></div>
                  </div>

                  <div class="form-group">
                          <div class="field"><%= f.text_field :surname ,placeholder: "Surname", class: "form-style" %></div>
                  </div>
                  <div class="form-group">
                        <div class="field"><%= f.password_field :password,placeholder: "Password", class: "form-style" %></div>
                  </div>
                  <!--
                  <div class="field">
                    <%= f.label :password_digest %><br>
                    <%= f.text_field :password_digest %>
                  </div>
                  -->
                  <div class="actions">
                    <%= f.submit class: 'login' %>
                    <%= link_to "Back", profile_path, class: 'btn' %>
                  </div>
      </div>
    </div>
  <% end %>
</div>
