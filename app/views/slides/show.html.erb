<p id="notice"><%= notice %></p>

<p style="text-align: center">
  <strong>Lecture:</strong>
  <%= @slide.lecture.name %>
</p>

<div class="page_number" style="text-align: center;">
  <h2> <%= "Page #{@slide.page_number} of #{@slide.lecture.slides.count}" %> </h2>
</div>

<div class="slide-container">

  <%= link_to [@lecture, @slide.previous], id: "prev" do %>
    <div class="arrow">&#8249;</div>
  <% end %>

  <div>
    <%= link_to image_tag(@slide.path), [@lecture, @slide.next]%>
  </div>

  <%= link_to [@lecture, @slide.next], id: "next" do%>
    <div class="arrow">&#8250;</div>
  <% end %>

</div>

<div class="comments">
  <div>
    <%= render @slide.comments.order(created_at: :desc) %>
  </div>

  <%= form_for([@slide, @slide.comments.new]) do |f| %>
    <div class="field">
      <%= f.label "new comment" %><br>
      <%= f.text_area :text, size: "70*5", class: "form-control" %>
    </div>
    <div class="actions">
      <%= f.submit "Post Comment", class: 'btn btn-default'%>
    </div>
  <% end %>
</div>
</br>

<%= link_to 'Back', @lecture %>
