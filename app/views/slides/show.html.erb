<p id="notice"><%= notice %></p>

<p style="text-align: center">
  <strong>Lecture:</strong>
  <%= @slide.lecture.name %>
</p>

<div class="page_number" style="text-align: center;">
  <h2> <%= "Page #{@slide.page_number + 1} of #{@slide.lecture.slides.length}" %> </h2>
</div>

<div class="slide-container">

  <%= link_to @slide.previous do %>
    <div class="arrow">&#8249;</div>
  <% end %>

  <div>
    <%= link_to image_tag(@slide.path), @slide.next%>
  </div>

  <%= link_to @slide.next do%>
    <div class="arrow">&#8250;</div>
  <% end %>

</div>

<div class="comments">
  <div>
    <%= render @slide.comments %>
  </div>

  <%= form_for([@slide, @slide.comments.new]) do |f| %>
    <div class="field">
      <%= f.label "new comment" %><br>
      <%= f.text_area :text, size: "70*5", class: "form-control" %>
    </div>
    <div class="actions">
      <%= f.submit "Post Comment", class: 'btn btn-default'%>
    </div>
  <% end %>
</div>

</br>

<%= link_to 'Edit', edit_slide_path(@slide) %> |
<%= link_to 'Back', slides_path %>
